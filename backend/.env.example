# ============================================
# SmartShop AI Backend - Environment Variables
# ============================================
# Copy this file to .env and update values

# ============ Application ============
APP_NAME=SmartShop AI Backend
APP_VERSION=1.0.0
DEBUG=true

# ============ YOLOv8 Model ============
# Path to your trained YOLOv8 model
YOLO_MODEL_PATH=./models/best.pt

# Device for inference: cpu, cuda:0, cuda:1, etc.
YOLO_DEVICE=cpu

# Minimum confidence threshold for detections (0.0 - 1.0)
YOLO_CONFIDENCE_THRESHOLD=0.25

# Detection mode: 'yolo' for real detection, 'mock' for testing without model
DETECTION_MODE=yolo

# ============ Gemini Vision OCR ============
# Your Google Gemini API key (get from https://aistudio.google.com/apikey)
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini model for vision tasks
GEMINI_MODEL=gemini-2.0-flash

# ============ Text-to-Speech ============
# Enable/disable TTS audio generation
TTS_ENABLED=true

# Default language for TTS
TTS_LANGUAGE=en

# ============ CORS ============
# Frontend origin (Vite dev server)
FRONTEND_ORIGIN=http://localhost:5173

# Allow all origins (set to false in production)
CORS_ALLOW_ALL=true

# ============ Database ============
# SQLite database URL (default)
DATABASE_URL=sqlite:///./app.db

# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/smartshop

# ============ Storage ============
# Path to store generated audio files
AUDIO_STORAGE_PATH=./storage/audio

# Path to store product images
PRODUCT_IMAGES_PATH=./storage/products

# ============ Server ============
HOST=0.0.0.0
PORT=8000
